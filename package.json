  "bugs": {
    "url": "https://github.com/Mackignacio/maya/issues"
  },
  "homepage": "https://github.com/Mackignacio/maya#readme",
  "devDependencies": {
    "@mayajs/core": "^0.4.1",
    "ts-lint": "^4.5.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3",
    "wait-on": "^3.3.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  }
