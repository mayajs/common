{
  "name": "@mayajs/common",
  "version": "0.3.0",
  "description": "A Node.js framework for REST API server-side-applications.",
  "main": "index.js",
  "files": [
    "*.d.ts",
    "*.js",
    "/**/*.d.ts",
    "/**/*.js",
    "!.git"
  ],
  "scripts": {
    "tsc": "tsc -w",
